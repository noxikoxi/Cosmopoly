<UserControl x:Class="GameContainers.controlls.Singularity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameContainers.controlls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Osobliwość" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource TextColor}" />
        <Ellipse Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF9A2626" Offset="0.023"/>
                    <GradientStop Color="#FF030000" Offset="0.746"/>
                </RadialGradientBrush>
            </Ellipse.Fill>

        </Ellipse>


    </Grid>
</UserControl>
