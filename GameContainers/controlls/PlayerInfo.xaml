<UserControl x:Class="GameContainers.controlls.PlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameContainers.controlls"
             mc:Ignorable="d" 
             d:DesignHeight="100" Width="250" Height="100">
    <Border
    CornerRadius="10"
    Background="{StaticResource ContainerBackground}"
    Padding="5"
    BorderBrush="Black"
    BorderThickness="2"
    >
        <StackPanel Orientation="Vertical">
            <Label x:Name="PlayerName" Content="Gracz 1" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Kredyty:" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                <Label x:Name="Credits" Content="100" Foreground="{StaticResource TextColor}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Ochrona przed atakiem piratów:" FontStyle="Italic" Foreground="{StaticResource TextColor}"/>
                <Label x:Name="PirateCards" Content="1" Foreground="{StaticResource TextColor}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
