<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        xmlns:controlls="clr-namespace:GameContainers.controlls;assembly=GameContainers" xmlns:containers="clr-namespace:GameContainers.containers;assembly=GameContainers" x:Class="Game.MainWindow"
        mc:Ignorable="d"
        Title="Cosmopoly" Height="1000" Width="1600">

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF1B1A1A" Offset="0"/>
                <GradientStop Color="#FF131313" Offset="0.483"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Canvas 
            x:Name="ArrowCanvas" 
            IsHitTestVisible="False" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
         />
        <controlls:PlayerInfo x:Name="PlayerInfo" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <controlls:GameButtons x:Name="GameButtons" HorizontalAlignment="Right" VerticalAlignment="Bottom" Dice_Clicked="GameButtons_Dice_Clicked" Upgrade_Clicked="GameButtons_Upgrade_Clicked" SkipTurn_Clicked="GameButtons_SkipTurn_Clicked"/>
        <controlls:PlayerListControl x:Name="PlayersList" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <containers:PlanetarySystem x:Name="Galaxy" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RadiusX="0.4" RadiusY="0.35" PercentageSize="0.9"/>
        <containers:PlanetarySystem x:Name="GalaxyInside" HorizontalAlignment="Center" VerticalAlignment="Center" RadiusX="0.4" RadiusY="0.30" PercentageSize="0.4"/>

        <Grid x:Name="PopupBG" Background="#7F000000" Visibility="Hidden">
            <controlls:Card x:Name="Card" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Visibility="Hidden"/>
            <controlls:EntityChooser x:Name="EntityChooser" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden" Exit_Clicked="EntityChooser_Exit_Clicked" />
            <controlls:UpgradeChooser x:Name="UpgradeChooser" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden" Width="750" Exit_Clicked="UpgradeChooser_Exit_Clicked"/>
        </Grid>
        
    </Grid>
</Window>
