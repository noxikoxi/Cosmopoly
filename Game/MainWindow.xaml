<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        xmlns:controlls="clr-namespace:GameContainers.controlls;assembly=GameContainers" xmlns:containers="clr-namespace:GameContainers.containers;assembly=GameContainers" x:Class="Game.MainWindow"
        mc:Ignorable="d"
        Title="Cosmopoly" Height="1000" Width="1600">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF1B1A1A" Offset="0"/>
                <GradientStop Color="#FF131313" Offset="0.483"/>
            </RadialGradientBrush>
        </Grid.Background>
        <controlls:PlayerInfo x:Name="PlayerInfo" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <controlls:GameButtons x:Name="GameButtons" HorizontalAlignment="Right" VerticalAlignment="Bottom" Dice_Clicked="GameButtons_Dice_Clicked" Upgrade_Clicked="GameButtons_Upgrade_Clicked"/>
        <controlls:PlayerListControl x:Name="PlayersList" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <containers:PlanetarySystem x:Name="Galaxy" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RadiusX="0.4" RadiusY="0.35" PercentageSize="0.9"/>
        <containers:PlanetarySystem x:Name="GalaxInside" HorizontalAlignment="Center" VerticalAlignment="Center" RadiusX="0.4" RadiusY="0.30" PercentageSize="0.4"/>
    </Grid>
</Window>
