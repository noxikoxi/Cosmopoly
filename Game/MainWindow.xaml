<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game"
        xmlns:controlls="clr-namespace:GameContainers.controlls;assembly=GameContainers" x:Class="Game.MainWindow"
        mc:Ignorable="d"
        Title="Cosmopoly" Height="800" Width="1200">
    <Grid>

        <controlls:PlayerInfo HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <controlls:GameButtons HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <controlls:Card HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="308"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <controlls:EntityChooser x:Name="MyEntityChooser" />
            <controlls:StationChooser x:Name="StationChooser"/>
            <controlls:UpgradeChooser x:Name="UpgradeChooser"/>
        </StackPanel>
    </Grid>
</Window>
