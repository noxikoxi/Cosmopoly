<Application x:Class="Game.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Game"
             StartupUri="WelcomeWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="ButtonBackground" Color="#CBBA8A"/>
            <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#D9CF98"/>
            <SolidColorBrush x:Key="TextColor" Color="#F9F9F9"/>
            <SolidColorBrush x:Key="ContainerBackground" Color="#FF58177B"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/GameContainers;component/styles/RoundedButton.xaml"/>
                <ResourceDictionary Source="/GameContainers;component/styles/WelcomePageButton.xaml"/>
                <ResourceDictionary Source="/GameContainers;component/styles/ExitButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
