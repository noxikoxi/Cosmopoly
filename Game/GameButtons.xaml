<UserControl x:Class="Game.GameButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="300" Width="300">
    <Border 
        Background="LightBlue" 
        CornerRadius="20" 
        Padding="10">
        <StackPanel Orientation="Vertical"  >
            <Label x:Name="DiceRolls" Content="1" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button x:Name="RollDiceButton" Content="Rzuć Kostką" Height="50" Margin="0,5,0,5"/>
            <Button x:Name="UpgradeButton" Content="Ulepszenia" Height="50" Margin="0,5,0,5"/>
        </StackPanel>
    </Border>
</UserControl>
