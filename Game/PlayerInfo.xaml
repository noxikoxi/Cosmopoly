<UserControl x:Class="Game.PlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game"
             mc:Ignorable="d" 
             d:DesignHeight="100" Width="250" Height="100">
    <Border 
    Background="LightBlue" 
    CornerRadius="20" 
    Padding="10">
        <StackPanel Orientation="Vertical">
            <Label x:Name="PlayerName" Content="Gracz 1" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Kredyty:" FontWeight="Bold"/>
                <Label x:Name="Credits" Content="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Ochrona przed atakiem piratów:" FontStyle="Italic"/>
                <Label x:Name="PirateCards" Content="1"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
